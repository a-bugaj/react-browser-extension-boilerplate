{
    "name": "react-browser-extension-boilerplate",
    "version": "1.0.0",
    "description": "Use React to build web extension",
    "main": "index.js",
    "repository": "git@github.com:a-bugaj/react-browser-extension-boilerplate.git",
    "author": "Adam Bugaj <adambugaj3@gmail.com>",
    "license": "MIT",
    "private": false,
    "scripts": {
        "start:dev": "npm run clean && webpack serve --env development --progress --config ./webpack/webpack.config.ts",
        "build": "npm run clean && webpack --env production --progress --config ./webpack/webpack.config.ts",
        "clean": "rimraf dist",
        "prettier": "prettier --check 'src/**/*.tsx' 'src/**/*.ts'",
        "prettier:write": "prettier --write 'src/**/*.tsx' 'src/**/*.ts'",
        "eslint": "eslint --ext .ts --ext .tsx src",
        "check-types": "tsc",
        "prepare": "husky install"
    },
    "dependencies": {
        "@emotion/react": "^11.5.0",
        "@emotion/styled": "^11.3.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.14.8",
        "@babel/core": "^7.15.0",
        "@babel/plugin-syntax-jsx": "^7.14.5",
        "@babel/plugin-transform-react-display-name": "^7.15.1",
        "@babel/preset-env": "^7.15.0",
        "@babel/preset-react": "^7.14.5",
        "@babel/preset-typescript": "^7.15.0",
        "@emotion/babel-plugin": "^11.3.0",
        "@emotion/eslint-plugin": "^11.5.0",
        "@svgr/webpack": "^5.5.0",
        "@types/copy-webpack-plugin": "^8.0.1",
        "@types/react": "^17.0.34",
        "@types/react-dom": "^17.0.11",
        "@types/webpack-dev-server": "^4.3.1",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "babel-loader": "^8.2.2",
        "copy-webpack-plugin": "^9.0.1",
        "eslint": "7.32.0",
        "eslint-plugin-react": "^7.26.1",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-security-node": "^1.0.14",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.5.0",
        "husky": "^7.0.0",
        "prettier": "^2.4.1",
        "rimraf": "^3.0.2",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.4",
        "webextension-polyfill": "^0.8.0",
        "webpack": "^5.62.1",
        "webpack-cli": "^4.9.1",
        "webpack-dev-server": "^4.4.0"
    }
}
